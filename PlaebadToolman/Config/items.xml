	<setattribute xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='ModSlots']" name="tier">1,2,3,4,5,6</setattribute>

	<!-- Increase base entity damage and velocity of nails -->
	<set xpath="/items/item[@name='resourceNail']/effect_group[@name='resourceNail']/passive_effect[@name='EntityDamage']/@value">25</set>
	<set xpath="/items/item[@name='resourceNail']/effect_group[@name='resourceNail']/passive_effect[@name='ProjectileVelocity']/@value">45</set>

	<!-- Add nails to ammo groups -->
	<set xpath="/items/item[@name='resourceNail']/property[@name='Group']/@value">Resources,Ammo/Weapons,Basics,Ammo,Ranged Weapons</set>

	<!-- Add steel nails to nailgun ammo -->
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/property[@class='Action0']/property[@name='Magazine_items']/@value">resourceNail, resourceNailSteel</set>

	<!-- Reduce stamina usage of the Impact Driver -->
	<set xpath="/items/item[@name='meleeToolSalvageT3ImpactDriver']/effect_group[@name='meleeToolSalvageT3ImpactDriver']/passive_effect[@name='StaminaLoss']/@value">16</set>
	<set xpath="/items/item[@name='meleeToolSalvageT3ImpactDriver']/effect_group[@name='Power Attack']/passive_effect[@name='StaminaLoss']/@value">28</set>

	<!-- Add new item Steel Nail ammo -->
	<insertAfter xpath="/items/item[@name='resourceNail']">
		<item name="resourceNailSteel">
			<property name="Meshfile" value="@:Other/Items/Tools/nailProjectilePrefab.prefab"/>
			<property name="HoldType" value="45"/>
			<property name="HandMeshfile" value="@:Other/Items/Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="@:Other/Items/Misc/sack_droppedPrefab.prefab"/>
			<property name="Material" value="MresourceScrapIron"/>
			<property name="Stacknumber" value="1000"/> <!-- STK resource -->
			<property name="EconomicValue" value="10"/>
			<property name="EconomicBundleSize" value="10"/>
			<property name="Tags" value="ammo,ranged,attStrength,perkMiner69r,perkPenetrator"/>
			<property name="Group" value="Resources,Ammo/Weapons,Basics,Ammo,Ranged Weapons"/>
			<property name="SoundPickup" value="nails_grab"/>
			<property name="SoundPlace" value="nails_place"/>
			<property name="CustomIcon" value="resourceNail"/>
			<property name="CustomIconTint" value="ffb0b0"/>
