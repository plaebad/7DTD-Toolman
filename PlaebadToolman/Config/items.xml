	<!-- Change class to Ranged to correct burst firing mode behavior -->
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/property[@class='Action0']/property[@name='Class']/@value">Ranged</set>

	<!-- Increase magazine size of the nailgun -->
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='BurstRoundCount']/@value">3</set>
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='MagazineSize']/@value">50</set>

	<!-- Adjust nailgun damage and handling -->
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='DamageFalloffRange' and @operation='base_set']/@value">20</set>
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='MaxRange']/@value">40</set>
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='KickDegreesVerticalMin']/@value">-.25</set>
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='KickDegreesVerticalMax']/@value">.25</set>
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='KickDegreesHorizontalMin']/@value">-.3</set>
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='KickDegreesHorizontalMax']/@value">.3</set>
	<set xpath="/items/item[@name='meleeToolRepairT3Nailgun']/effect_group[@name='meleeToolRepairT3Nailgun']/passive_effect[@name='IncrementalSpreadMultiplier']/@value">1.5</set>

